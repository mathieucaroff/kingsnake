{
  "name": "kingsnake",
  "version": "1.0.0",
  "description": "A multiplayer online snake game with territorial control",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"bun run devs\" \"bun run devc\"",
    "devs": "bun run --watch src/server/server.ts",
    "devc": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "test": "vitest run",
    "test:run": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest --coverage",
    "lint": "eslint src --ext .ts,.js",
    "format": "prettier --write src/**/*.{ts,js,html,css}",
    "start": "pm2 start ecosystem.config.js"
  },
  "dependencies": {
    "fastify": "^4.24.3",
    "@fastify/cors": "^8.4.0",
    "@fastify/static": "^6.12.0",
    "socket.io": "^4.7.4",
    "helmet": "^7.1.0",
    "rate-limiter-flexible": "^4.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "concurrently": "^8.2.2",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "socket.io-client": "^4.7.4",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "pm2": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
